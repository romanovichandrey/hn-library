<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.romanovich.it.pojos" auto-import="false" catalog="hn_library">
        <class name="Person" table="T_PERSON">
                <id name="id" column="F_ID">
                     <generator class="native"/>
                </id>
                <property name="name" column="F_NAME" type="string"/>
                <property name="surname" column="F_SURNAME" type="string"/>
                <property name="age" column="F_AGE" type="int"/>
        </class>
</hibernate-mapping>