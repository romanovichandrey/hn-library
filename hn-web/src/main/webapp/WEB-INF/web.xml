<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <display-name>MyLibrary</display-name>
    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>by.romanovich.it.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>by.romanovich.it.filter.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>BookController</servlet-name>
        <servlet-class>by.romanovich.it.controller.BookController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookController</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddBookController</servlet-name>
        <servlet-class>by.romanovich.it.controller.AddBookController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBookController</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogOutController</servlet-name>
        <servlet-class>by.romanovich.it.controller.LogOutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutController</servlet-name>
        <url-pattern>/logOut</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCategoryController</servlet-name>
        <servlet-class>by.romanovich.it.controller.AddCategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCategoryController</servlet-name>
        <url-pattern>/addCategory</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>by.romanovich.it.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateBookController</servlet-name>
        <servlet-class>by.romanovich.it.controller.UpdateBookController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBookController</servlet-name>
        <url-pattern>/updateBook</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegistrController</servlet-name>
        <servlet-class>by.romanovich.it.controller.RegistrController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrController</servlet-name>
        <url-pattern>/userRegistr</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>by.romanovich.it.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteBookController</servlet-name>
        <servlet-class>by.romanovich.it.controller.DeleteBookController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBookController</servlet-name>
        <url-pattern>/deleteBook</url-pattern>
    </servlet-mapping>
</web-app>
